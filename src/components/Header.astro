---
import Link from "./Link.astro";
import { SITE_TITLE } from "../consts";
import ThemeSwitch from "./ThemeSwitch";
---

<header>
  <h2 class="text-2xl font-bold my-4 font-serif">
    {SITE_TITLE}
  </h2>
  <nav class="flex gap-4 items-center">
    <Link href="/">Home</Link>
    <Link href="/blog">Blog</Link>
    <Link href="/about">About</Link>
    <Link href="https://twitter.com/su_andrewk">Twitter</Link>
    <Link href="https://github.com/ajkachnic">GitHub</Link>
    <ThemeSwitch client:visible />
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
