---
export interface Props {
  kind: "info" | "warning" | "error";
}

const { kind } = Astro.props;

const classes = {
  info: "bg-blue-100 border-blue-500 text-blue-800 dark:(bg-blue-900 border-blue-500 text-blue-200)",
  warning:
    "bg-yellow-100 border-yellow-500 text-yellow-800 dark:(bg-yellow-800 border-yellow-500 text-yellow-100)",
  error: "bg-red-100 border-red-500 text-red-800",
};
---

<div class={`p-4 my-4 border-l-6 border-l-solid ${classes[kind]}`}>
  <slot />
</div>
